<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#e5e5e5"
    >


    <LinearLayout android:layout_width="fill_parent" android:layout_height="fill_parent"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        android:paddingTop="10dp">

        <LinearLayout android:layout_width="0dp" android:layout_height="fill_parent"
            android:layout_weight="2"
            android:orientation="vertical"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingBottom="10dp"
            android:paddingTop="20dp">
            <!-- child views -->
            <include
                layout="@layout/notices_cover"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/notices"
                />
            <include
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                layout="@layout/schoolinfo_cover"
                android:layout_gravity="center_horizontal"
                android:id="@+id/schoolinfo"
                android:layout_marginTop="10dp"/>
            <include
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                layout="@layout/schoolintro_cover"
                android:layout_gravity="center_horizontal"
                android:id="@+id/schoolintro"
                android:layout_marginTop="10dp"/>
            <include
                layout="@layout/notices_parents_cover"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/notices_parents"
                android:layout_marginTop="10dp"
                />
            <include
                layout="@layout/meal_cover"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/meal"
                android:layout_marginTop="10dp"
                />

            <include
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                layout="@layout/schedule_cover"
                android:layout_gravity="center_horizontal"
                android:id="@+id/schedule"
                android:layout_marginTop="10dp"/>
            <include
                layout="@layout/appinfo_cover"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/info"
                android:layout_marginTop="10dp"
                />
        </LinearLayout>

    </LinearLayout>

</ScrollView>