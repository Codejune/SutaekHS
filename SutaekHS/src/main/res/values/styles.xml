<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools" tools:ignore="NewApi">

    <style name="Widget.ActionBar" parent="@style/Widget.Sherlock.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@drawable/ab_solid_sutaek</item>
        <item name="background">@drawable/ab_solid_sutaek</item>
        <item name="actionOverflowButtonStyle">@style/customOverflowButtonStyle</item>
        <item name="android:actionOverflowButtonStyle">@style/customOverflowButtonStyle</item>
        <item name="homeAsUpIndicator">@drawable/ic_up</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_up</item>
    </style>


    <style name="Widget.ActionBar.Transparent">
        <item name="android:background">@android:color/transparent</item>
        <item name="background">@android:color/transparent</item>
        <item name="android:titleTextStyle">@style/NoTitleText</item>
        <item name="actionOverflowButtonStyle">@style/customOverflowButtonStyle</item>
        <item name="android:actionOverflowButtonStyle">@style/customOverflowButtonStyle</item>
        <item name="android:popupBackground">@color/background</item>
        <item name="homeAsUpIndicator">@drawable/ic_up</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_up</item>
    </style>

    <style name="NoTitleText">
        <item name="android:textSize">0sp</item>
        <item name="android:textColor">#00000000</item>
    </style>
    <!-- overflow button style -->
    <style name="customOverflowButtonStyle" parent="Widget.Sherlock.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_action_overflow</item>
    </style>
</resources>