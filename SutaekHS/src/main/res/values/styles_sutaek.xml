<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Sutaek" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="actionBarItemBackground">@drawable/selectable_background_sutaek</item>
        <item name="dropDownListViewStyle">@style/DropDownListView.Sutaek</item>
        <item name="actionBarTabStyle">@style/ActionBarTabStyle.Sutaek</item>
        <item name="actionDropDownStyle">@style/DropDownNav.Sutaek</item>
        <item name="actionBarStyle">@style/ActionBar.Solid.Sutaek</item>
        <item name="actionModeBackground">@drawable/cab_background_top_sutaek</item>
        <item name="actionModeSplitBackground">@drawable/cab_background_bottom_sutaek</item>
        <item name="actionModeCloseButtonStyle">@style/ActionButton.CloseMode.Sutaek</item>

                <!-- Light.DarkActionBar specific -->
        <item name="actionBarWidgetTheme">@style/Theme.Sutaek.Widget</item>

    </style>

    <style name="Theme.Sutaek.NoActionBar" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <!-- No ActionBar -->
        <item name="android:windowNoTitle">true</item>

    </style>

    <style name="ActionBar.Solid.Sutaek" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="background">@drawable/ab_background</item>
        <item name="backgroundSplit">@drawable/ab_background</item>
    </style>
	
    <style name="DropDownListView.Sutaek" parent="@style/Widget.AppCompat.ListView.DropDown">
        <item name="android:listSelector">@drawable/selectable_background_sutaek</item>
    </style>

    <style name="ActionBarTabStyle.Sutaek" parent="@style/Widget.AppCompat.ActionBar.TabView">
        <item name="android:background">@drawable/tab_indicator_ab_sutaek</item>
    </style>
	
    <style name="DropDownNav.Sutaek" parent="@style/Widget.AppCompat.Spinner.DropDown.ActionBar">
        <item name="android:dropDownSelector">@drawable/selectable_background_sutaek</item>
    </style>
    
    <style name="ActionButton.CloseMode.Sutaek" parent="@style/Widget.AppCompat.ActionButton.CloseMode">
        <item name="android:background">@drawable/btn_cab_done_sutaek</item>
    </style>
    
    <!-- this style is only referenced in a Light.DarkActionBar based theme -->
    <style name="Theme.Sutaek.Widget" parent="@style/Theme.AppCompat">
        <item name="dropDownListViewStyle">@style/DropDownListView.Sutaek</item>
    </style>

</resources>